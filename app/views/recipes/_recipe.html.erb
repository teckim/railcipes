<%= link_to recipe_path(recipe) do %>
  <div class="rounded p-4 bg-slate-800">
    <div>
      <span class="text-2xl text-slate-100"><%= recipe.name %></span>
      <span class="text-sm italic ml-1">By <%= recipe.user.name %></span>
    </div>
    <div class="mt-4">
      <%= render layout: "shared/tag" do %>
        <span class="font-medium"><%= pluralize(recipe.foods.count, 'Food item') %></span>
      <% end %>
      <%= render layout: "shared/tag" do %>
        <span class="font-medium">Total price <%= number_to_currency(recipe.total_price) %></span>
      <% end %>
    </div>
  </div>
<% end %>
