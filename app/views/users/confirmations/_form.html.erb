<% input_classes = 'w-full rounded border-none ring-1 ring-slate-900/10 focus:ring-2 focus:ring-primary-500/50 shadow-md shadow-slate-900 bg-slate-900' %>
<% label_classes = 'block font-normal my-1' %>
<div class="w-96 mx-auto shadow-md">
  <div class="p-6 rounded bg-slate-800">
    <div class="mb-4">
      <div class=" text-2xl text-primary-600 mb-1">We got you!</div>
      <p class="text-sm text-slate-500">Enter your email and click send, a confirmation will be sent to you in maximum 5 min</p>
    </div>
    <%= form_for resource, as: resource_name, url: confirmation_path(resource_name) do |form| %>
      <div class="flex flex-col gap-y-4">
        <div>
          <%= render 'users/shared/error_messages', resource: resource %>
        </div>
        <div>
          <%= form.label :email, class: label_classes %>
          <%= form.email_field :email, class: input_classes, autocomplete: "email", placeholder: "name@example.com" %>
        </div>
      </div>
      <div class="mt-8">
        <button type="submit" class="w-full rounded px-4 py-2 bg-primary-400/20 shadow-md text-primary-600 tracking-wide">
          Resend confirmation
        </button>
      </div>
    <% end %>
    <div class="grid grid-cols-2 gap-x-2 mt-2">
      <%= link_to new_registration_path(resource_name) do %>
        <button class="w-full rounded px-2 py-1 hover:bg-primary-400/20 text-primary-600 text-sm tracking-wide">
          Sign up
        </button>
      <% end %>
      <%= link_to new_session_path(resource_name) do %>
        <button class="w-full rounded px-2 py-1 hover:bg-primary-400/20 text-primary-600 text-sm tracking-wide">
          Sign in
        </button>
      <% end %>
    </div>
  </div>
</div>
