<% input_classes = 'w-full rounded border-none ring-1 ring-slate-900/10 focus:ring-2 focus:ring-primary-500/50 shadow-md shadow-slate-900 bg-slate-900' %>
<% label_classes = 'block font-normal mb-1' %>
<div class="w-96 mx-auto shadow-md">
  <div class="p-6 rounded bg-slate-800">
    <div class="mb-4">
      <div class=" text-2xl text-primary-600 mb-1">Register</div>
      <p class="text-sm text-slate-500">Let's get you all set up so you can verify your personal information and begin setting up your riceps.</p>
    </div>
    <%= form_for resource, as: resource_name, url: registration_path(resource_name) do |form| %>
      <div class="flex flex-col gap-y-4">
        <div>
          <%= render 'users/shared/error_messages', resource: resource %>
        </div>
        <div>
          <%= form.label :name, class: label_classes %>
          <%= form.text_field :name, class: input_classes, placeholder: "John Doe", autofocus: true %>
        </div>
        <div>
          <%= form.label :email, class: label_classes %>
          <%= form.email_field :email, class: input_classes, autocomplete: "email", placeholder: "name@example.com" %>
        </div>
        <div>
          <%= form.label :password, class: label_classes %>
          <%= form.password_field :password, class: input_classes, autocomplete: "new-password" %>
        </div>
        <div>
          <%= form.label :password_confirmation, class: label_classes %>
          <%= form.password_field :password_confirmation, class: input_classes, autocomplete: "new-password" %>
        </div>
      </div>
      <div class="mt-8">
        <button type="submit" class="w-full rounded px-4 py-2 bg-primary-400/20 shadow-md text-primary-600 tracking-wide">
          Create Account
        </button>
      </div>
    <% end %>
  </div>
  <div class="text-slate-400 text-sm text-center mt-4">
    <span>Already have an account?</span>
    <%= link_to "Sign in", new_session_path(resource_name), class: "text-primary-400 underline" %><br />
  </div>
</div>
