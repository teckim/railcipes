<% input_classes = 'w-full rounded border-none ring-1 ring-slate-900/10 focus:ring-2 focus:ring-primary-500/50 shadow-md shadow-slate-900 bg-slate-900' %>
<% checkbox_classes = 'rounded border-none shadow ring-1 ring-slate-900/10 focus:ring-2 focus:ring-primary-500/50 shadow-md shadow-slate-900 bg-slate-900' %>
<% label_classes = 'block font-normal my-1' %>

<div class="w-96 mx-auto shadow-md">
  <div class="p-6 rounded bg-slate-800">
    <div class="mb-4">
      <div class=" text-2xl text-primary-600 mb-1">Welcome Back!</div>
      <p class="text-sm text-slate-500">Railcipes is very happy to have you back</p>
    </div>
    <%= form_for resource, as: resource_name, url: session_path(resource_name)  do |form| %>
      <div class="flex flex-col gap-y-4">
        <div>
          <%= render 'users/shared/error_messages', resource: resource %>
        </div>
        <div>
          <%= form.label :email, class: label_classes %>
          <%= form.email_field :email, class: input_classes, autocomplete: "email", placeholder: "name@example.com" %>
        </div>
        <div>
          <%= form.label :password, class: label_classes %>
          <%= form.password_field :password, class: input_classes, autocomplete: "new-password" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="flex items-center gap-x-2">
            <%= form.check_box :remember_me, class: checkbox_classes %>
            <%= form.label :remember_me, class: label_classes %>
          </div>
        <% end %>
      </div>
      <div class="mt-8">
        <button type="submit" class="w-full rounded px-4 py-2 bg-primary-400/20 shadow-md text-primary-600 tracking-wide">
          Sign in
        </button>
      </div>
    <% end %>
  </div>
  <div class="text-slate-500 text-sm text-center mt-4">
    <span>Don't have an account?</span>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "text-primary-400 underline" %><br />
  </div>
  <%- if devise_mapping.confirmable? %>
    <div class="text-slate-500 text-sm text-center">
      <span>Didn't get confirmation?</span>
      <%= link_to "Resend confirmation", new_confirmation_path(resource_name), class: "text-primary-400 underline" %><br />
    </div>
  <% end %>
</div>
