<div>
  <h1 class="text-2xl text-primary-400 mb-4">Shopping list</h1>
  <div class="columns-2 mb-8">
    <div>
      <span class="text-lg text-slate-200"><%= @general_shopping_items.size %></span>
      <h3 class="text-sm">Amount of items to buy</h3>
    </div>
    <div>
      <span class="text-lg text-slate-200"><%= number_to_currency(@total_price) %></span>
      <h3 class="text-sm">Total value of food needed</h3>
    </div>
  </div>
  <div class="flex flex-col gap-y-2">
    <%= render partial: "general_shopping_item", collection: @general_shopping_items %>
  </div>
</div>
